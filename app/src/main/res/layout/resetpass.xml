<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/aasystem"
    tools:context=".auth.ForgetPassword"
    android:orientation="vertical">

    //Logo
    <androidx.cardview.widget.CardView
        android:id="@+id/card1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="@color/gray"
        app:cardElevation="0dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo_invert"></ImageView>


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/userReg"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@+id/card1"
        android:fontFamily="@font/spinnaker"
        android:padding="8dp"
        android:text="Enter your email address to reset you password"
        android:textColor="#000007"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/etResetGmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        android:drawableLeft="@drawable/email_icon"
        android:drawablePadding="12dp"
        android:ems="10"
        android:fontFamily="Quick"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="8dp"
        android:textColorHint="@color/black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@android:color/transparent"
        android:drawablePadding="20dp"
        android:ems="10"
        android:hint="Reset link will be sent to your email   "
        android:inputType="text"
        android:textStyle="bold"
        android:padding="7dp"
        android:textColorHint="@color/dark_gray"
        android:textSize="15sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#f9d7db" />


    <Button
        android:id="@+id/btnresetPass"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:background="@drawable/btnbtn"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:background="@color/white_smoke"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@color/main">



        <TextView
            android:id="@+id/aasystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/spinnaker"
            android:text="Add your fingerprint"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="121dp"
            android:layout_height="155dp"
            android:background="@drawable/bc"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_handup">

        </ImageView>
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:id="@+id/finger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/spinnaker"
            android:text="Let's start"
            android:textColor="#000007"
            android:textSize="25dp"
            android:textStyle="normal" />
        <TextView
            android:id="@+id/paraLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_below="@+id/fingerprintImage"
            android:fontFamily="@font/spinnaker"
            android:padding="10dp"
            android:text="Place your Finger on the Scanner"
            android:textAlignment="center" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/intro_lottie_animation_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:lottie_fileName="fingerprint.json"
            app:lottie_loop="true"
            app:lottie_autoPlay="true"/>

        <Button
            android:id="@+id/fingerbtn"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="80dp"
            android:text="Fingerprint Authentication" />
        <Button
            android:id="@+id/btnSave"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@drawable/btnbtn"
            android:fontFamily="sans-serif-condensed-medium"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:textStyle="bold" />




    </LinearLayout>
    </ScrollView>


</LinearLayout>






<?xml
    version="1.0"
    encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@color/main">

        <TextView
            android:id="@+id/aasystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="45dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/spinnaker"
            android:text="Create User Account"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="121dp"
            android:layout_height="155dp"
            android:background="@drawable/bc"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_handup"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/orgname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittextt"
                android:drawablePadding="20dp"
                android:padding="7dp"
                android:ems="10"
                android:text="Choose your Organization"
                android:textColorHint="@color/gray"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_company" />

            <Button
                android:id="@+id/gotofinger"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/btndomain"
                android:drawableLeft="@drawable/ic_fingerprint"
                android:drawablePadding="5dp"
                android:padding="10dp"
                android:text="Add Your Fingerprint"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/putuserid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_id"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="Quick"
                android:hint=" Employee ID"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="@color/gray"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main" />


            <EditText
                android:id="@+id/putUserPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_lphone"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="Quick"
                android:hint="Phone number"
                android:inputType="number"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="@color/gray"
                android:textSize="16dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/main" />

            <EditText
                android:id="@+id/putUserEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:padding="10dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:inputType="textEmailAddress"
                android:hint="Email"
                android:textColorHint="@color/gray"
                android:maxLines="1"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_email" />

            <EditText
                android:id="@+id/putUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:background="@drawable/edittext_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:drawablePadding="12dp"
                android:textColorHint="@color/gray"
                android:hint="Username"
                android:textSize="16dp"
                android:drawableLeft="@drawable/ic_person" />


            <EditText
                android:id="@+id/putRegPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:drawablePadding="12dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColorHint="@color/gray"
                android:hint="Password"
                android:textSize="16dp"
                android:background="@drawable/edittext_corners"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="12dp"
                android:padding="10dp"
                android:drawableLeft="@drawable/ic_lock" />


            <CheckBox
                android:id="@+id/checkbox_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Allow Location Access"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000007"
                android:textSize="18dp"
                android:textStyle="normal"/>

            <CheckBox
                android:id="@+id/checkbox_notify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow Notifications"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000007"
                android:textSize="18dp"
                android:textStyle="normal" />

            <CheckBox
                android:id="@+id/checkbox_certify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I certify all this information is correct"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="#000007"
                android:textSize="18dp"
                android:textStyle="normal" />

            <Button
                android:id="@+id/btnReg"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/btnbtn"
                android:text="REGISTER"
                android:textAllCaps="false"
                android:layout_marginTop="40dp"
                android:layout_marginRight="5dp"
                android:fontFamily="sans-serif-condensed-medium"
                android:textColor="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/login_account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="Already have an account?"
                android:textColor="@color/selector_txt"
                android:textIsSelectable="true"
                android:textSize="17dp" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/main" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
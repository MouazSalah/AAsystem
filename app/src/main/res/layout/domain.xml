<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".auth.SplashActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="5dp"
        android:background="@color/main">


        <TextView
            android:id="@+id/aasystem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/spinnaker"
            android:text="Specify Domain"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/icon"
            android:layout_width="121dp"
            android:layout_height="155dp"
            android:background="@drawable/bc"
            android:src="@drawable/ic_handup">

        </ImageView>
    </RelativeLayout>


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <Button
                android:id="@+id/gpsbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/btnbtn"
                android:drawableLeft="@drawable/ic_gps"
                android:fontFamily="@font/spinnaker"
                android:onClick="@string/gps"
                android:padding="10dp"
                android:textColor="@color/white"
                android:text="Determine the organization location"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/work_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/gpsbox"
                android:layout_marginStart="8dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/spinnaker"
                android:paddingTop="10dp"
                android:text="Determine work hours"
                android:textColor="#000007"
                android:textSize="20sp" />


            <TextView
                android:id="@+id/from_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_hour"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/spinnaker"
                android:paddingTop="10dp"
                android:text="From:"
                android:textColor="#000007"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/from_hour_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_hour"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/from_hour"
                android:background="@drawable/edittextt"
                android:drawablePadding="90dp"
                android:hint="00:00"
                android:padding="8dp" />



            <TextView
                android:id="@+id/To_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_hour"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_toRightOf="@+id/from_hour_edit"
                android:fontFamily="@font/spinnaker"
                android:paddingTop="10dp"
                android:text="To:"
                android:textColor="#000007"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/To_hour_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/work_hour"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/To_hour"
                android:background="@drawable/edittextt"
                android:drawablePadding="90dp"
                android:hint="00:00"
                android:padding="8dp" />


            <Button
                android:id="@+id/btnSave"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_below="@+id/To_hour_edit"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:background="@drawable/btnbtn"
                android:fontFamily="sans-serif-condensed-medium"
                android:text="Save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
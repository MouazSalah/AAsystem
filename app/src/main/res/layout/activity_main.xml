<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/main"
    android:orientation="vertical"
    tools:context=".auth.SplashActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="200dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="90dp">


            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/intro"
                app:lottie_loop="true"
                app:lottie_fileName="wlc.json"
                app:lottie_autoPlay="true"
                app:lottie_scale="@android:integer/config_shortAnimTime"
                >


            </com.airbnb.lottie.LottieAnimationView>



            <ImageView
                android:id="@+id/logo"
                android:layout_width="121dp"
                android:layout_height="155dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/bc"
                android:src="@drawable/ic_handup">

            </ImageView>
            <TextView
                android:layout_below="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="45dp"
                android:drawablePadding="10dp"
                android:fontFamily="@font/spinnaker"
                android:text="Auto Attendance "
                android:textColor="@color/white"
                android:textSize="40sp" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>